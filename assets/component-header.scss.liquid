.header-wrapper{
  header{
    .header-logo{
      .header__heading{
        .header_heading,
        .header__icons{
          width: calc(25% - 1rem * 3 / 4);
        }
        .div_Form{
          width: calc(50% - 1rem * 3 / 4);
          .search-modal__form{
            max-width: 46.8rem;
            margin: 0 auto;
          }
        }
      }
    }
  }
}
@media(max-width:989px){
  #shopify-section-recognition_currency_switcher{
    .recognition_currency{
      .recogniti_currency_oncontent{
        justify-content: center;
        .currency{
        	display: none;
        }
      }
    }
  }
  .header-wrapper{
    .header{
      .header-logo{
        padding: 25px 0;
        @media(max-width:480px){
          padding:33px 0px;
        }
        .header__heading{
          justify-content: space-between;
          header-drawer{
            margin: 0;
            width: 20px;
            height: 100%;
            .menu-drawer-container{
              .header__icon{
              	width: 20px;
                span{
                  display: flex;
                  svg{
                  	
                  }
                }
              }
            }
          }
          .header-logo-mobile{
            max-width: 207px;
            width: 100%;
            padding: 0;
            position: absolute;
            left: 0;
            right: 0;
            margin: 0 auto;
          }
          .div_Form{
          	display: none;
          }
          .header__icons{
            width: auto;
            max-width: fit-content;
            padding: 0;
            .icon-whilist,
            .header__icon--account,
            .icon-question{
            	display: none;
            }
            .header__icon--cart{
              margin: 0;
              display: flex;
              justify-content: flex-end;
              .cart-desktop{
              	display: none;
              }
              .cart-mobile{
              	display: block;
              }
            }
          }
        }
      }
      .main-menu{
      	display: none;
      }
    }
    .form-Mobile{
      display: block;
      padding: 0 30px;
      margin-bottom: 25px;
      @media(max-width:480px){
      	padding: 0 15px;
      }
    }
  }
}